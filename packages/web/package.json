{
	"name": "@caterly/web",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"style": "./dist/styles/index.css",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./styles.css": {
			"import": "./dist/styles/index.css",
			"style": "./dist/styles/index.css"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"copy:css": "cpx \"src/app/styles/**/*\" dist/app/styles",
		"copy:css:watch": "cpx -w \"src/app/styles/**/*\" dist/app/styles",
		"tsc:build": "tsc -p tsconfig.json & pnpm run copy:css",
		"dev": "tsc -w & pnpm run copy:css:watch",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "eslint . --max-warnings 0",
		"prettier": "prettier --write .",
		"clean": "rimraf dist node_modules .turbo .cache",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@caterly/ui": "workspace:*",
		"@caterly/tailwind-config": "workspace:*"
	},
	"devDependencies": {}
}
