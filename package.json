{
	"name": "caterly",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"build:utils": "turbo run build --filter=@caterly/utils",
		"build:ui": "turbo run build --filter=@cately/design",
		"build:web": "turbo run build --filter=@caterly/web",
		"build:admin": "turbo run build --filter=admin",
		"tsc:build": "pnpm --filter=@caterly/utils run tsc:build && pnpm --filter=@cately/design run tsc:build && pnpm --filter=@caterly/web run tsc:build",
		"predev": "pnpm --filter=@caterly/utils run dev & pnpm --filter=@cately/design run dev & pnpm --filter=@caterly/web run dev",
		"dev:admin": "pnpm run predev & pnpm --filter=admin run dev",
		"lint": "turbo run lint",
		"lint-staged": "lint-staged",
		"check-types": "turbo run check-types",
		"clean": "pnpm -r run clean && pnpm -r exec rimraf .turbo || true",
		"prepare": "husky"
	},
	"lint-staged": {
		"packages/design/src/*.{ts,tsx,js,jsx}": [
			"eslint --config packages/design/eslint.config.mjs --fix",
			"prettier --write"
		],
		"packages/web/src/**/*.{ts,tsx,js,jsx}": [
			"eslint --config packages/web/eslint.config.mjs --fix",
			"prettier --write"
		],
		"apps/admin/src/**/*.{ts,tsx,js,jsx}": [
			"eslint --config apps/admin/eslint.config.mjs --fix",
			"prettier --write"
		],
		"*.md": "prettier --write",
		"*.json": "prettier --write"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.49.8",
		"clsx": "^2.1.1",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router-dom": "^7.6.1",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "4.1.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@tailwindcss/vite": "^4.1.7",
		"@types/node": "^22.15.23",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"@typescript-eslint/eslint-plugin": "^8.33.0",
		"@typescript-eslint/parser": "^8.33.0",
		"@vitejs/plugin-react": "^4.5.0",
		"cpx": "^1.5.0",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-import-resolver-typescript": "^3.10.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.4.0",
		"eslint-plugin-promise": "^6.6.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-sonarjs": "^3.0.2",
		"eslint-plugin-turbo": "^2.5.3",
		"eslint-plugin-unicorn": "^51.0.1",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.3",
		"typescript": "^5.8.3",
		"vite": "^5.4.19",
		"vite-plugin-dts": "^4.5.4",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
	}
}
