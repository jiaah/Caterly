{
	"name": "caterly",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"build:ui": "turbo run build --filter=@caterly/ui",
		"build:web": "turbo run build --filter=@caterly/web",
		"build:admin": "turbo run build --filter=admin",
		"prebuild": "pnpm run build:utils & pnpm run build:ui & pnpm run build:web",
		"predev": "pnpm --filter=ui dev & pnpm --filter=utils dev & pnpm --filter=web dev",
		"dev:admin": "pnpm run predev & pnpm --filter=admin dev",
		"lint": "turbo run lint",
		"lint-staged": "lint-staged",
		"check-types": "turbo run check-types",
		"clean": "rimraf node_modules .turbo && turbo clean",
		"prepare": "husky"
	},
	"lint-staged": {
		"packages/ui/src/*.{ts,tsx,js,jsx}": [
			"eslint --config packages/ui/eslint.config.mjs --fix",
			"prettier --write"
		],
		"packages/web/src/**/*.{ts,tsx,js,jsx}": [
			"eslint --config packages/web/eslint.config.mjs --fix",
			"prettier --write"
		],
		"apps/admin/src/**/*.{ts,tsx,js,jsx}": [
			"eslint --config apps/admin/eslint.config.mjs --fix",
			"prettier --write"
		],
		"*.md": "prettier --write",
		"*.json": "prettier --write"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.49.4",
		"clsx": "^2.1.0",
		"cpx": "^1.5.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.22.3",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "4.1.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@tailwindcss/vite": "^4.1.4",
		"@types/node": "^22.14.1",
		"@types/react": "^18.2.64",
		"@types/react-dom": "^18.2.21",
		"@typescript-eslint/eslint-plugin": "^8.31.0",
		"@typescript-eslint/parser": "^8.31.0",
		"@vitejs/plugin-react": "^4.2.1",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.1",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.34.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-sonarjs": "^3.0.2",
		"eslint-plugin-turbo": "^2.5.0",
		"eslint-plugin-unicorn": "^51.0.1",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"rimraf": "^6.0.1",
		"tailwindcss-animate": "^1.0.7",
		"turbo": "^2.5.0",
		"typescript": "^5.4.2",
		"vite": "^5.1.5",
		"vite-plugin-dts": "^4.5.3",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
	}
}
